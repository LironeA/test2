<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
	<application android:allowBackup="true" android:icon="@mipmap/appicon" android:roundIcon="@mipmap/appicon_round" android:supportsRtl="true"></application>

  <!-- Дозвіл на читання зовнішньої пам'яті -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <!-- Дозвіл на запис у зовнішню пам'ять -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <!-- Дозвіл на доступ до медіафайлів (для Android 10 та вище) -->
  <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

  <!-- Дозволи для інтернет-з'єднання -->
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <!-- Спеціальний дозвіл для Android 11 (API 30) і вище -->
  <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />

  <!-- Забезпечує доступ до папки "Downloads" на пристрої -->
  <queries>
    <intent>
      <action android:name="android.intent.action.OPEN_DOCUMENT_TREE" />
    </intent>
  </queries>
</manifest>